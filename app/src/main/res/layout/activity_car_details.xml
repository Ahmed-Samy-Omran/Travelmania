<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavmain.home.carrental.CarDetailsActivity"
    android:background="@drawable/blue_background_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/pattern"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/top_img"
        android:layout_width="410dp"
        android:layout_height="288dp"
        android:src="@drawable/car_rental_details"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="16dp"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/img_2"
               android:layout_width="204dp"
               android:layout_height="wrap_content"
               android:src="@drawable/car_details_1"
               android:adjustViewBounds="true"
               />
           <ImageView
               android:id="@+id/img_3"
               android:layout_width="359dp"
               android:layout_height="wrap_content"
               android:src="@drawable/car_details_2"
               android:adjustViewBounds="true"
               android:layout_marginTop="24dp"/>
           <ImageView
               android:id="@+id/img_4"
               android:layout_width="343dp"
               android:layout_height="wrap_content"
               android:src="@drawable/car_details_3"
               android:adjustViewBounds="true"
               android:layout_marginTop="24dp"
               android:layout_gravity="center"/>
           <ImageView
               android:id="@+id/img_5"
               android:layout_width="302dp"
               android:layout_height="wrap_content"
               android:src="@drawable/car_details_4"
               android:adjustViewBounds="true"
               android:layout_marginTop="24dp"/>
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/rent_now"
               android:layout_width="166dp"
               android:layout_height="54dp"
               android:text="Rent Now"
               android:textColor="@color/white"
               android:background="@drawable/button_green_background_login"
               android:layout_gravity="center"
               android:layout_marginTop="32dp"/>
       </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>