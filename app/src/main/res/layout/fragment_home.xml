<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/blue_background_color"
    >

    <ImageView
        android:id="@+id/pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pattern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />
    <ImageView
        android:id="@+id/top_logo_home"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>
    <LinearLayout
        android:id="@+id/linear_layout_home"
        android:layout_width="343dp"
        android:layout_height="156dp"
        app:layout_constraintTop_toBottomOf="@id/top_logo_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/grey_20_background"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_car_rental"
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:gravity="center|start"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="39.5dp"
                    android:src="@drawable/car_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Car rental"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_flights"
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:gravity="center|start">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/flight_icon"
                    android:layout_marginStart="50.5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Flights"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_hotels"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:paddingTop="5dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hotel_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Hotels"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/white"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            >
            <LinearLayout
                android:id="@+id/linear_attractions"
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:gravity="center|start"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/attractions_icon"
                    android:layout_marginStart="35dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Attractions"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_taxi"
                android:layout_width="171dp"
                android:layout_height="52dp"
                android:gravity="center|start">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/taxi_icon"
                    android:layout_marginStart="73.5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chatbot_linear"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:background="@drawable/grey_12_background"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/chatbot"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never Stop Exploring With Our Smart Chatbot"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:textSize="14sp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/white"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/horizontal_dotted"
        android:layout_width="343dp"
        android:layout_height="2dp"
        android:layerType="software"
        app:layout_constraintTop_toTopOf="@id/linear_layout_home"
        app:layout_constraintStart_toStartOf="@id/linear_layout_home"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_home"
        android:layout_marginTop="55dp"
        android:src="@drawable/horizontal_dot_line"
        />
    <ImageView
        android:id="@+id/horizontal_dotted_2"
        android:layout_width="343dp"
        android:layout_height="2dp"
        android:layerType="software"
        app:layout_constraintTop_toTopOf="@id/linear_layout_home"
        app:layout_constraintStart_toStartOf="@id/linear_layout_home"
        app:layout_constraintEnd_toEndOf="@id/linear_layout_home"
        android:layout_marginTop="105dp"
        android:src="@drawable/horizontal_dot_line"
        />
    <ImageView
        android:id="@+id/vertical_dotted"
        android:layout_width="52dp"
        android:layout_height="2dp"
        android:layerType="software"
        android:rotation="90"
        app:layout_constraintTop_toTopOf="@id/linear_layout_home"
        app:layout_constraintBottom_toTopOf="@id/horizontal_dotted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/vertical_dot_line"
        />
    <ImageView
        android:id="@+id/vertical_dotted_2"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layerType="software"
        android:rotation="90"
        app:layout_constraintTop_toBottomOf="@id/horizontal_dotted_2"
        app:layout_constraintBottom_toBottomOf="@id/linear_layout_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/vertical_dot_line"
        />
    <TextView
        android:id="@+id/featured_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Unforgettable  Cities Of Egypt"
        app:layout_constraintTop_toBottomOf="@id/chatbot_linear"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/featured_text"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cities_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="1dp"
            tools:listitem="@layout/city_item" />

    </LinearLayout>


