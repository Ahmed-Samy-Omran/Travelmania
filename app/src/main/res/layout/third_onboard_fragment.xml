<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/on_borad_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboard3"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/on_board_layer" />
    <TextView
        android:layout_width="34dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Skip"
        android:textSize="16dp"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/first_text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Share photos, get feedback &amp; be
inspired by others"
        android:textSize="20sp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/second_text"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:text="Get suggestions by geolocation
&amp; community recommendations"
        android:textSize="16sp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_text"
        android:textColor="@color/purple"/>
    <LinearLayout
        android:id="@+id/get_started"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:background="@drawable/glassy_onboard_background_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="38dp"
       android:gravity="center">
           <TextView
               android:layout_width="97dp"
               android:layout_height="18dp"
               android:text="Get started"
                android:textColor="@color/white"
               android:textStyle="bold"
               android:textAllCaps="false"
               android:textSize="16sp"
               android:fontFamily="@font/dm_sans"
               android:layout_marginStart="10dp"
               />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="29.17dp"
            android:adjustViewBounds="true"
            android:src="@drawable/arrow_onboard_btn"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>