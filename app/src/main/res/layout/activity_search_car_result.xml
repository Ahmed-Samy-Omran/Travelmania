<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavmain.home.carrental.SearchCarResult"
    android:background="@drawable/blue_background_color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/pattern"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/car_rental_search_back_press"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_chat_bot_backpress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:gravity="center">
        <ImageView
            android:layout_width="9dp"
            android:layout_height="17dp"
            android:src="@drawable/arrow_back_thin"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/search_view_car"
        android:layout_width="336dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/car_rental_back_press"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:src="@drawable/search_bar_rental"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycker_car_rental"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_view_car"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        tools:listitem="@layout/car_rental_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</androidx.constraintlayout.widget.ConstraintLayout>