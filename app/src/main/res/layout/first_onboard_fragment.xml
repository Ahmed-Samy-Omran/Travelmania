<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/on_borad_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboard1"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/on_board_layer" />
    <TextView
        android:layout_width="34dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Skip"
        android:textSize="16dp"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/first_text"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:text="See a detailed plan of your journey"
        android:textSize="20sp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/second_text"
        android:layout_width="211dp"
        android:layout_height="42dp"
        android:text="Modify your plan according to your needs"
        android:textSize="16sp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_text"
        android:textColor="@color/not_yellow"/>
    <LinearLayout
        android:id="@+id/next_1"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:background="@drawable/glassy_onboard_background_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
       android:gravity="center">
           <TextView
               android:layout_width="36dp"
               android:layout_height="18dp"
               android:text="Next"
                android:textColor="@color/white"
               android:textStyle="bold"
               android:textAllCaps="false"
               android:textSize="16sp"
               android:fontFamily="@font/dm_sans"
               />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="29.17dp"
            android:adjustViewBounds="true"
            android:src="@drawable/arrow_onboard_btn"
            android:layout_marginStart="7.61dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>